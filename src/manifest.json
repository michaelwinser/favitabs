{
  "manifest_version": 2,
  "name": "Favitabs",
  "author": "Richard Tucker",
  "version": "1.0",
  
  "description": "Organise tabs by favicon, navigate them with mouse or keyboard",
  "icons": { "128": "icon128.png" },

  "permissions": [
    "tabs"
  ],

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+F"
      }
    }
  },
  
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },

  "browser_action": {
    "default_popup": "popup.html"
  }
}
